# Kingdom SaaS Environment Configuration
# Copy this file to .env and configure your values

# Database Configuration
POSTGRES_PASSWORD=kingdom_secure_pass_2024
REDIS_PASSWORD=redis_secure_pass_2024

# JWT Configuration
JWT_SECRET=super_secure_jwt_secret_2024_change_in_production

# AI Service API Keys
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password

# Third-party Service Passwords
NEXTCLOUD_ADMIN_PASSWORD=admin_secure_pass_2024
GRAFANA_ADMIN_PASSWORD=grafana_secure_pass_2024

# Cloud Storage for Backups (AWS S3)
S3_BUCKET=kingdom-saas-backups
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_REGION=us-east-1

# Hardware Configuration
GPU_MEMORY_LIMIT=8GB

# Domain Configuration
KINGDOM_DOMAIN=localhost
KINGDOM_PROTOCOL=http

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info

# Auto-scaling Configuration
MIN_REPLICAS=1
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80